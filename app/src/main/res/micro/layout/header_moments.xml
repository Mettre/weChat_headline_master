<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tab_micro"
            android:textColor="@color/color_515051"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/micro_add_friend" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d8d8d8" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/persion_back" />

    <TextView
        android:id="@+id/back_line"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/iv_back" />

    <ImageView
        android:id="@+id/icon_head"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/back_line"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/my_avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_back"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/icon_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ChayChan"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

</RelativeLayout>