<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:scaleType="fitXY"
        android:src="@mipmap/persion_back" />

    <TextView
        android:id="@+id/back_line"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/iv_back" />

    <ImageView
        android:id="@+id/icon_head"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/back_line"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:src="@mipmap/my_avatar" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_back"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/icon_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ChayChan"
        android:textColor="@color/white"
        android:textSize="16.0sp" />


    <TextView
        android:id="@+id/signature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxWidth="180dp"
        android:maxLines="2"
        android:textColor="@color/oil3"
        android:textSize="@dimen/smallNormal" />

</RelativeLayout>