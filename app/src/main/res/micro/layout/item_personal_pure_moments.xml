<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/smallNormalMargin"
    android:layout_marginRight="@dimen/smallNormalMargin"
    android:layout_marginTop="@dimen/topMargin"
    android:layout_marginBottom="@dimen/topMargin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_item_blank"
        android:layout_width="@dimen/normalMargin"
        android:layout_height="@dimen/thirdMargin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/first_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                style="@style/news_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="5分钟前"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@color/md_grey_200"
            android:orientation="vertical"
            android:paddingBottom="@dimen/eightMargin"
            android:paddingLeft="@dimen/leftMargin"
            android:paddingRight="@dimen/normalMargin"
            android:paddingTop="@dimen/eightMargin">

            <TextView
                android:id="@+id/moments_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3dp"
                android:maxLines="1"
                android:text="心力交瘁 真爱生命真爱生命真爱生命 远离房地产心"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>