<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normalMargin"
    android:paddingTop="@dimen/eightMargin"
    android:paddingRight="@dimen/normalMargin">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/back_line"
                android:layout_marginRight="@dimen/eightMargin"
                android:src="@mipmap/my_avatar" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon_head"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="ChayChan"
                android:textColor="@color/jet"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/news_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="5分钟前"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/mostSmallNormal" />

            <TextView
                android:id="@+id/follow_each"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_gray2"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="互相关注"
                android:textColor="@color/gold"
                android:textSize="@dimen/smallNormal"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/sixMargin"
            android:background="@color/color_d8d8d8"></View>

    </LinearLayout>
</LinearLayout>