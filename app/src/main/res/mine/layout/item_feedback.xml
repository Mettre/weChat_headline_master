<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/eightMargin"
    android:layout_marginRight="@dimen/eightMargin"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normalMargin"
    android:paddingRight="@dimen/normalMargin"
    android:paddingTop="@dimen/sixMargin">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignBottom="@+id/back_line"
                android:layout_marginRight="@dimen/eightMargin"
                android:src="@mipmap/my_avatar" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon_head"
                android:layout_toRightOf="@id/icon_head"
                android:ellipsize="end"
                android:gravity="top"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="ChayChan"
                android:textColor="@color/color_406599"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/news_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="5分钟前"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/mostSmallNormal" />

            <TextView
                android:id="@+id/moments_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/user_name"
                android:layout_below="@id/user_name"
                android:layout_marginBottom="@dimen/sixMargin"
                android:layout_marginTop="@dimen/topMargin"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3dp"
                android:maxLines="5"
                android:text="心力交瘁 真爱生命 远离房地产心"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/eightMargin"
            android:background="@color/color_d8d8d8"></View>

    </LinearLayout>


</LinearLayout>