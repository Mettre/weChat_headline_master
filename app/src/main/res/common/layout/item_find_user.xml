<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normalMargin"
    android:paddingTop="@dimen/eightMargin"
    android:paddingRight="@dimen/normalMargin">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/back_line"
                android:layout_marginRight="@dimen/eightMargin"
                android:src="@mipmap/my_avatar" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon_head"
                android:layout_toRightOf="@id/icon_head"
                android:ellipsize="end"
                android:gravity="top"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="ChayChan"
                android:textColor="@color/jet"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_red"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="@dimen/smallNormal" />


            <TextView
                android:id="@+id/moments_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_alignLeft="@id/user_name"
                android:layout_marginTop="@dimen/sixMargin"
                android:layout_marginBottom="@dimen/sixMargin"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3dp"
                android:maxLines="5"
                android:text="10023223232"
                android:textColor="@color/oil3"
                android:textSize="@dimen/normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/sixMargin"
            android:background="@color/color_d8d8d8"></View>

    </LinearLayout>
</LinearLayout>